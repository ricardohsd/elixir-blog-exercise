<h2>Show post</h2>

<ul>

  <li>
    <strong>Title:</strong>
    <%= @post.title %>
  </li>

  <li>
    <strong>Body:</strong>
    <%= @post.body %>
  </li>

</ul>

<%= link "Edit", to: user_post_path(@conn, :edit, @conn.assigns[:user], @post) %>
<%= link "Back", to: user_post_path(@conn, :index, @conn.assigns[:user]) %>
